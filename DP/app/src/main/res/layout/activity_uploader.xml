<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<Button
    android:id="@+id/splitter"
    android:layout_width="150dp"
    android:layout_height="50dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_marginTop="44dp"
    android:text="SPLIT VIDEO"
    android:textColor="#000000"
    android:textSize="15dp"
    android:typeface="serif" />

<Button
    android:id="@+id/uploader"
    android:layout_width="150dp"
    android:layout_height="50dp"
    android:layout_alignBaseline="@+id/splitter"
    android:layout_alignBottom="@+id/splitter"
    android:layout_alignParentRight="true"
    android:text="UPLOAD VIDEO"
    android:textColor="#000000"
    android:textSize="15dp"
    android:typeface="serif" />

<Button
    android:id="@+id/showupload"
    android:layout_width="150dp"
    android:layout_height="50dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_below="@+id/splitter"
    android:layout_marginTop="46dp"
    android:text="SHOW UPLOADED VIDEO"
    android:textColor="#000000"
    android:textSize="15dp"
    android:typeface="serif" />

<ListView
    android:id="@+id/listView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/showupload"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="69dp" >
</ListView>

<Button
    android:id="@+id/exit"
    style="?android:attr/buttonStyleSmall"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/splitter"
    android:text="Exit" />

</RelativeLayout>
